pipeline {
    agent any

    tools {
        maven 'Maven'  // Matches the Maven installation name in Jenkins Global Tools
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/MUSHARAFBAIG124/maven23.git'
            }
        }

        stage('Build') {
            steps {
                dir('MyMavenApp1') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('MyMavenApp1') {
                    sh 'mvn test'
                }
            }
        }

        stage('Run Application') {
            steps {
                dir('MyMavenApp1') {
                    sh 'java -jar target/MyMavenJenkinsPipeline-1.0-SNAPSHOT.jar'
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
